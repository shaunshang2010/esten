<div class="login_form">
	<div class="logo"></div>
	<div class="title">
		<h1>沈阳亿斯腾科技咨询服务有限公司</h1>
		<h4>Esten Technology Consulting Services Co., Ltd.</h4>
	</div>
	<%= form_for(:session, url: admin_login_path) do |f| %>
		<div>
			<%= f.email_field :username, placeholder: "用户名" %>
		</div>
		<div>
			<%= f.password_field :password, placeholder: "密码" %>
		</div>
		<div>
			<%= f.submit "登     录" %>
		</div>
		<div>
			<%= link_to "忘记密码？", "javascript:;", class: "forgot_pass left" %>
			<%= link_to "返回首页", root_path, class: "return_home right" %>
		</div>
	<% end %>
</div>